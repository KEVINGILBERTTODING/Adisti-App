<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_14sdp"
    tools:context=".PicFragment.PicUpdateKajianManfaatFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kajian Manfaat"
                android:textColor="@color/black"
                android:textSize="@dimen/_22ssp"
                android:fontFamily="@font/popsem"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klasifikasi Pemohon Bantuan"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popsem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori pemohon bantuan"
                android:fontFamily="@font/popmed"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spkategoriPemohonBantuan"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pihak penerima bantuan"
                android:fontFamily="@font/popmed"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spPihakPenerimaBantuan"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manfaat Bantuan"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popsem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Manfaat bagi penerima bantuan"
                android:fontFamily="@font/popsem"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/etManfaatPenerimaBantuan"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:lines="5"
                android:gravity="start"
                android:textSize="@dimen/_11ssp"
                android:hint="Manfaat penerima bantuan"
                android:fontFamily="@font/popmed"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Manfaat yang diharapkan bagi perusahaan"
                android:fontFamily="@font/popsem"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spManfaatPerusahaan"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indikator"
                android:fontFamily="@font/popmed"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>


            <Spinner
                android:id="@+id/spIndikator"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>




            <LinearLayout
                android:id="@+id/layoutCustomeIndikator"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etCustomIndikator"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:hint="indikator"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/layout_edittext1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penjelasan indikator"
                    android:fontFamily="@font/popmed"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/etPenjelasanIndikator"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:hint="Penjelasan indikator"
                    android:gravity="start"
                    android:textSize="@dimen/_11ssp"
                    android:lines="3"
                    android:fontFamily="@font/popmed"
                    android:background="@drawable/layout_edittext1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Manfaat yang diharapkan bagi masyarakat umum"
                android:fontFamily="@font/popsem"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilar"
                android:fontFamily="@font/popmed"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spPilar"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TPB"
                android:fontFamily="@font/popmed"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spTpb"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAN"
                android:fontFamily="@font/popmed"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/spRan"
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/layout_edittext1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/popsem"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBatal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batal"
                app:backgroundTint="@color/light_gray2"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popsem"/>





        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>