<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_14sdp"
    android:background="@color/white"
    tools:context=".PtsFragment.PtsHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/photo_default"
                app:civ_border_color="@color/main"
                app:civ_border_width="@dimen/_2sdp" />



            <TableLayout
                android:layout_toRightOf="@id/img_profile"
                android:id="@+id/tab_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popreg"
                        android:text="Selamat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popreg"
                        android:text=" datang"
                        android:textColor="@color/main"
                        android:textSize="@dimen/_11sdp" />
                </TableRow>

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popsem"
                    android:text="Tasya Theressa"
                    android:maxLength="20"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />


            </TableLayout>

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvMenuSurvey"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Survey"
                        android:fontFamily="@font/popsem"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toLeftOf="@id/ivStatus"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Kelola data proposal"
                        android:fontFamily="@font/popreg"
                        android:layout_toLeftOf="@id/ivStatus"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_survey2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMenuHasilSurvey"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Hasil Survey"
                        android:fontFamily="@font/popsem"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toLeftOf="@id/ivStatus"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Kelola kajian manfaat proposal"
                        android:fontFamily="@font/popreg"
                        android:layout_toLeftOf="@id/ivStatus"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_hasil_survey2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>











</RelativeLayout>