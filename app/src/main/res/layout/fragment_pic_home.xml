<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_16sdp"
    tools:context=".PicFragment.PicHomeFragment">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Hai,"
                android:fontFamily="@font/popsem"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:text="Kevin Gilbert"
                android:fontFamily="@font/popreg"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@color/main"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/rl1"
        android:orientation="vertical">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_edittext1"
            app:iconifiedByDefault="false"
            android:layout_marginTop="@dimen/_10sdp"
            app:queryHint="Nama proposal"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:text="Daftar proposal"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/popsem"
            android:layout_below="@id/searchView"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProposal"
            android:layout_width="match_parent"
            tools:listitem="@layout/list_proposal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"/>
    </LinearLayout>








</RelativeLayout>